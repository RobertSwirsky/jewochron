<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Jewochron.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Jewochron"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Content>
        <Grid Background="#1E1E1E" Padding="10">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                    <!-- Narrow: Single column, compact -->
                    <VisualState x:Name="NarrowState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="0" />
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="CardsGrid.ColumnDefinitions[1].Width" Value="0" />
                            <Setter Target="MainStack.Spacing" Value="10" />
                            <Setter Target="DateCard.Padding" Value="15,12" />
                            <Setter Target="ParshaCard.Grid.Column" Value="0" />
                            <Setter Target="ParshaCard.Padding" Value="12,10" />
                            <Setter Target="ParshaCard.MinHeight" Value="100" />
                            <Setter Target="DafYomiCard.Grid.Column" Value="0" />
                            <Setter Target="DafYomiCard.Grid.Row" Value="1" />
                            <Setter Target="DafYomiCard.Padding" Value="12,10" />
                            <Setter Target="DafYomiCard.MinHeight" Value="100" />
                            <Setter Target="DafYomiCard.Margin" Value="0,0,0,10" />
                            <Setter Target="HalachicCard.Grid.Row" Value="2" />
                            <Setter Target="HalachicCard.Padding" Value="12,10" />
                            <Setter Target="HalachicCard.MinHeight" Value="100" />
                            <Setter Target="MoonCard.Grid.Column" Value="0" />
                            <Setter Target="MoonCard.Grid.Row" Value="3" />
                            <Setter Target="MoonCard.Padding" Value="12,10" />
                            <Setter Target="MoonCard.MinHeight" Value="100" />
                            <Setter Target="HolidayCard.Grid.Column" Value="0" />
                            <Setter Target="HolidayCard.Grid.Row" Value="4" />
                            <Setter Target="HolidayCard.Padding" Value="12,10" />
                            <Setter Target="HolidayCard.MinHeight" Value="100" />
                            <Setter Target="PrayerCard.Grid.Column" Value="0" />
                            <Setter Target="PrayerCard.Grid.Row" Value="5" />
                            <Setter Target="PrayerCard.Padding" Value="12,10" />
                            <Setter Target="PrayerCard.MinHeight" Value="100" />
                        </VisualState.Setters>
                    </VisualState>
                    <!-- Medium: Two columns -->
                    <VisualState x:Name="MediumState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="700" />
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="CardsGrid.ColumnDefinitions[1].Width" Value="*" />
                            <Setter Target="MainStack.Spacing" Value="15" />
                            <Setter Target="DateCard.Padding" Value="20,15" />
                            <Setter Target="ParshaCard.Grid.Column" Value="0" />
                            <Setter Target="ParshaCard.Padding" Value="15,12" />
                            <Setter Target="ParshaCard.MinHeight" Value="130" />
                            <Setter Target="DafYomiCard.Grid.Column" Value="1" />
                            <Setter Target="DafYomiCard.Grid.Row" Value="0" />
                            <Setter Target="DafYomiCard.Padding" Value="15,12" />
                            <Setter Target="DafYomiCard.MinHeight" Value="130" />
                            <Setter Target="DafYomiCard.Margin" Value="0,0,0,10" />
                            <Setter Target="HalachicCard.Grid.Row" Value="1" />
                            <Setter Target="HalachicCard.Padding" Value="15,12" />
                            <Setter Target="HalachicCard.MinHeight" Value="130" />
                            <Setter Target="MoonCard.Grid.Column" Value="1" />
                            <Setter Target="MoonCard.Grid.Row" Value="1" />
                            <Setter Target="MoonCard.Padding" Value="15,12" />
                            <Setter Target="MoonCard.MinHeight" Value="130" />
                            <Setter Target="HolidayCard.Grid.Column" Value="0" />
                            <Setter Target="HolidayCard.Grid.Row" Value="2" />
                            <Setter Target="HolidayCard.Padding" Value="15,12" />
                            <Setter Target="HolidayCard.MinHeight" Value="130" />
                            <Setter Target="PrayerCard.Grid.Column" Value="1" />
                            <Setter Target="PrayerCard.Grid.Row" Value="2" />
                            <Setter Target="PrayerCard.Padding" Value="15,12" />
                            <Setter Target="PrayerCard.MinHeight" Value="130" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="MainStack" HorizontalAlignment="Stretch" MaxWidth="1200" Spacing="15">

                    <!-- Location Header -->
                    <TextBlock
                        x:Name="txtLocation"
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Foreground="#888888"
                        Margin="0,5,0,0"
                        Text="Loading location..." />

                    <!-- Live Time Display -->
                    <Border 
                        Background="#2D2D30" 
                        CornerRadius="12" 
                        Padding="15,12"
                        HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock
                                    Text="Local Time"
                                    FontSize="12"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <TextBlock
                                    x:Name="txtLocalTime"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    Foreground="#4EC9B0"
                                    Text="00:00:00" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock
                                    Text="Jerusalem Time"
                                    FontSize="12"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <TextBlock
                                    x:Name="txtJerusalemTime"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    Foreground="#FFD700"
                                    Text="00:00:00" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Date Card -->
                    <Border 
                        x:Name="DateCard"
                        Background="#2D2D30" 
                        CornerRadius="12" 
                        Padding="20,15">
                        <StackPanel Spacing="8">
                            <TextBlock
                                x:Name="txtEnglishDate"
                                FontSize="16"
                                HorizontalAlignment="Center"
                                Foreground="#B0B0B0"
                                TextWrapping="Wrap"
                                Text="Loading..." />
                            <TextBlock
                                x:Name="txtHebrewDate"
                                FontSize="20"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"
                                TextWrapping="Wrap"
                                Foreground="#FFFFFF"
                                Text="" />
                            <TextBlock
                                x:Name="txtHebrewDateInHebrew"
                                FontSize="18"
                                HorizontalAlignment="Center"
                                FlowDirection="RightToLeft"
                                TextWrapping="Wrap"
                                Foreground="#9966FF"
                                Text="" />
                        </StackPanel>
                    </Border>

                    <!-- Responsive Grid Layout -->
                    <Grid x:Name="CardsGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="280" />
                            <ColumnDefinition Width="*" MinWidth="280" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Torah Portion Card -->
                        <Border 
                            x:Name="ParshaCard"
                            Grid.Row="0" Grid.Column="0"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="15,12"
                            Margin="0,0,10,10"
                            MinHeight="130">
                            <StackPanel Spacing="6" VerticalAlignment="Center">
                                <TextBlock
                                    Text="ðŸ“– Torah Portion"
                                    FontSize="13"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <TextBlock
                                    x:Name="txtParsha"
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Foreground="#4EC9B0"
                                    Text="" />
                                <TextBlock
                                    x:Name="txtParshaHebrew"
                                    FontSize="16"
                                    HorizontalAlignment="Center"
                                    FlowDirection="RightToLeft"
                                    TextWrapping="Wrap"
                                    Foreground="#4EC9B0"
                                    Text="" />
                            </StackPanel>
                        </Border>

                        <!-- Daf Yomi Card -->
                        <Border 
                            x:Name="DafYomiCard"
                            Grid.Row="0" Grid.Column="1"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="15,12"
                            Margin="0,0,0,10"
                            MinHeight="130">
                            <StackPanel Spacing="6" VerticalAlignment="Center">
                                <TextBlock
                                    Text="ðŸ“š Daf Yomi"
                                    FontSize="13"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <TextBlock
                                    x:Name="txtDafYomi"
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Foreground="#CE9178"
                                    Text="" />
                                <TextBlock
                                    x:Name="txtDafYomiHebrew"
                                    FontSize="16"
                                    HorizontalAlignment="Center"
                                    FlowDirection="RightToLeft"
                                    TextWrapping="Wrap"
                                    Foreground="#CE9178"
                                    Text="" />
                            </StackPanel>
                        </Border>

                        <!-- Halachic Times Card -->
                        <Border 
                            x:Name="HalachicCard"
                            Grid.Row="1" Grid.Column="0"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="15,12"
                            Margin="0,0,10,10"
                            MinHeight="130">
                            <StackPanel Spacing="8" VerticalAlignment="Center">
                                <TextBlock
                                    Text="ðŸ• Halachic Times"
                                    FontSize="13"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Alot HaShachar:" Foreground="#B0B0B0" Margin="0,2" FontSize="12" />
                                    <TextBlock x:Name="txtAlotHaShachar" Grid.Row="0" Grid.Column="1" Foreground="#FFFFFF" Margin="8,2,0,2" FontSize="12" Text="" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Sunrise:" Foreground="#B0B0B0" Margin="0,2" FontSize="12" />
                                    <TextBlock x:Name="txtSunrise" Grid.Row="1" Grid.Column="1" Foreground="#FFD700" FontWeight="SemiBold" Margin="8,2,0,2" FontSize="12" Text="" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Sunset:" Foreground="#B0B0B0" Margin="0,2" FontSize="12" />
                                    <TextBlock x:Name="txtSunset" Grid.Row="2" Grid.Column="1" Foreground="#FFD700" FontWeight="SemiBold" Margin="8,2,0,2" FontSize="12" Text="" />

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Tzait:" Foreground="#B0B0B0" Margin="0,2" FontSize="12" />
                                    <TextBlock x:Name="txtTzait" Grid.Row="3" Grid.Column="1" Foreground="#FFFFFF" Margin="8,2,0,2" FontSize="12" Text="" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Moon Phase Card -->
                        <Border 
                            x:Name="MoonCard"
                            Grid.Row="1" Grid.Column="1"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="15,12"
                            Margin="0,0,0,10"
                            MinHeight="130">
                            <StackPanel Spacing="6" VerticalAlignment="Center">
                                <TextBlock
                                    Text="ðŸŒ™ Moon Phase"
                                    FontSize="13"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                                    <TextBlock x:Name="txtMoonPhase" FontSize="32" Text="" />
                                    <TextBlock x:Name="txtMoonPhaseName" FontSize="14" VerticalAlignment="Center" TextWrapping="Wrap" Foreground="#B0B0B0" Text="" />
                                </StackPanel>

                                <!-- Molad Information -->
                                <Border 
                                    Background="#1E1E1E" 
                                    CornerRadius="6" 
                                    Padding="8,6"
                                    Margin="0,4,0,0">
                                    <StackPanel Spacing="3">
                                        <TextBlock
                                            Text="Next Molad (New Moon)"
                                            FontSize="10"
                                            HorizontalAlignment="Center"
                                            Foreground="#888888" />
                                        <TextBlock
                                            x:Name="txtMoladDate"
                                            FontSize="11"
                                            HorizontalAlignment="Center"
                                            Foreground="#FFD700"
                                            TextWrapping="Wrap"
                                            Text="" />
                                        <TextBlock
                                            x:Name="txtMoladTime"
                                            FontSize="11"
                                            HorizontalAlignment="Center"
                                            Foreground="#B0B0B0"
                                            Text="" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Next Holiday Card -->
                        <Border 
                            x:Name="HolidayCard"
                            Grid.Row="2" Grid.Column="0"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="15,12"
                            Margin="0,0,10,10"
                            MinHeight="130">
                            <StackPanel Spacing="6" VerticalAlignment="Center">
                                <TextBlock
                                    Text="ðŸŽ‰ Next Holiday"
                                    FontSize="13"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <TextBlock
                                    x:Name="txtNextHolidayEnglish"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Foreground="#FFD700"
                                    Text="" />
                                <TextBlock
                                    x:Name="txtNextHolidayHebrew"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                    FlowDirection="RightToLeft"
                                    TextWrapping="Wrap"
                                    Foreground="#FFD700"
                                    Text="" />
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5" Margin="0,2,0,0">
                                    <TextBlock
                                        x:Name="txtDaysUntilHoliday"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="#FF6B6B"
                                        Text="" />
                                    <TextBlock
                                        Text="days"
                                        FontSize="12"
                                        Foreground="#B0B0B0"
                                        VerticalAlignment="Center"
                                        Margin="0,4,0,0" />
                                </StackPanel>
                                <TextBlock
                                    x:Name="txtHolidayDate"
                                    FontSize="11"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888"
                                    Text="" />
                            </StackPanel>
                        </Border>

                        <!-- Prayer Times Card -->
                        <Border 
                            x:Name="PrayerCard"
                            Grid.Row="2" Grid.Column="1"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="15,12"
                            Margin="0,0,0,10"
                            MinHeight="130">
                            <StackPanel Spacing="6" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                                    <TextBlock
                                        Text="âœ¡ï¸ Prayer Times"
                                        FontSize="13"
                                        Foreground="#888888"
                                        VerticalAlignment="Center" />
                                    <TextBlock
                                        x:Name="txtCurrentTime"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="#FFFFFF"
                                        VerticalAlignment="Center"
                                        Text="" />
                                </StackPanel>
                                <TextBlock
                                    x:Name="txtCurrentPrayer"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    Foreground="#90EE90"
                                    Text="" />
                                <Grid Margin="0,2,0,0" MaxWidth="350">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="22" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Shacharit:" Foreground="#B0B0B0" Margin="0,2" FontSize="12" />
                                    <TextBlock x:Name="txtShacharitTime" Grid.Row="0" Grid.Column="1" Foreground="#87CEEB" Margin="8,2,0,2" FontSize="12" Text="" />
                                    <TextBlock x:Name="txtShacharitIndicator" Grid.Row="0" Grid.Column="2" FontSize="14" HorizontalAlignment="Center" Margin="4,2,0,2" Text="" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Mincha:" Foreground="#B0B0B0" Margin="0,2" FontSize="12" />
                                    <TextBlock x:Name="txtMinchaTime" Grid.Row="1" Grid.Column="1" Foreground="#FFA07A" Margin="8,2,0,2" FontSize="12" Text="" />
                                    <TextBlock x:Name="txtMinchaIndicator" Grid.Row="1" Grid.Column="2" FontSize="14" HorizontalAlignment="Center" Margin="4,2,0,2" Text="" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Maariv:" Foreground="#B0B0B0" Margin="0,2" FontSize="12" />
                                    <TextBlock x:Name="txtMaarivTime" Grid.Row="2" Grid.Column="1" Foreground="#9370DB" Margin="8,2,0,2" FontSize="12" Text="" />
                                    <TextBlock x:Name="txtMaarivIndicator" Grid.Row="2" Grid.Column="2" FontSize="14" HorizontalAlignment="Center" Margin="4,2,0,2" Text="" />
                                </Grid>
                            </StackPanel>
                        </Border>

                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Page.Content>
</Page>
