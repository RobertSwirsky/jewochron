<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Jewochron.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Jewochron"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Content>
        <Grid Background="#1E1E1E" Padding="20">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Stretch" MaxWidth="1400" Spacing="20">

                    <!-- Location Header -->
                    <TextBlock
                        x:Name="txtLocation"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        Foreground="#888888"
                        Margin="0,10,0,0"
                        Text="Loading location..." />

                    <!-- Date Card -->
                    <Border 
                        Background="#2D2D30" 
                        CornerRadius="12" 
                        Padding="25,20">
                        <StackPanel Spacing="12">
                            <TextBlock
                                x:Name="txtEnglishDate"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                Foreground="#B0B0B0"
                                TextWrapping="Wrap"
                                Text="Loading..." />
                            <TextBlock
                                x:Name="txtHebrewDate"
                                FontSize="26"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"
                                TextWrapping="Wrap"
                                Foreground="#FFFFFF"
                                Text="" />
                            <TextBlock
                                x:Name="txtHebrewDateInHebrew"
                                FontSize="24"
                                HorizontalAlignment="Center"
                                FlowDirection="RightToLeft"
                                TextWrapping="Wrap"
                                Foreground="#9966FF"
                                Text="" />
                        </StackPanel>
                    </Border>

                    <!-- Next Holiday Card -->
                    <Border 
                        Background="#2D2D30" 
                        CornerRadius="12" 
                        Padding="25,20"
                        HorizontalAlignment="Stretch">
                        <StackPanel Spacing="12">
                            <TextBlock
                                Text="ðŸŽ‰ Next Holiday"
                                FontSize="18"
                                HorizontalAlignment="Center"
                                Foreground="#888888" />
                            <TextBlock
                                x:Name="txtNextHolidayEnglish"
                                FontSize="24"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"
                                TextWrapping="Wrap"
                                Foreground="#FFD700"
                                Text="" />
                            <TextBlock
                                x:Name="txtNextHolidayHebrew"
                                FontSize="22"
                                HorizontalAlignment="Center"
                                FlowDirection="RightToLeft"
                                TextWrapping="Wrap"
                                Foreground="#FFD700"
                                Text="" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8" Margin="0,5,0,0">
                                <TextBlock
                                    x:Name="txtDaysUntilHoliday"
                                    FontSize="32"
                                    FontWeight="Bold"
                                    Foreground="#FF6B6B"
                                    Text="" />
                                <TextBlock
                                    Text="days"
                                    FontSize="18"
                                    Foreground="#B0B0B0"
                                    VerticalAlignment="Center"
                                    Margin="0,8,0,0" />
                            </StackPanel>
                            <TextBlock
                                x:Name="txtHolidayDate"
                                FontSize="14"
                                HorizontalAlignment="Center"
                                Foreground="#888888"
                                Text="" />
                        </StackPanel>
                    </Border>

                    <!-- Responsive Grid Layout -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="300" />
                            <ColumnDefinition Width="*" MinWidth="300" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Torah Portion Card -->
                        <Border 
                            Grid.Row="0" Grid.Column="0"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,10,10"
                            MinHeight="160">
                            <StackPanel Spacing="10">
                                <TextBlock
                                    Text="ðŸ“– Torah Portion"
                                    FontSize="16"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <TextBlock
                                    x:Name="txtParsha"
                                    FontSize="22"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Foreground="#4EC9B0"
                                    Text="" />
                                <TextBlock
                                    x:Name="txtParshaHebrew"
                                    FontSize="20"
                                    HorizontalAlignment="Center"
                                    FlowDirection="RightToLeft"
                                    TextWrapping="Wrap"
                                    Foreground="#4EC9B0"
                                    Text="" />
                            </StackPanel>
                        </Border>

                        <!-- Daf Yomi Card -->
                        <Border 
                            Grid.Row="0" Grid.Column="1"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,10"
                            MinHeight="160">
                            <StackPanel Spacing="10">
                                <TextBlock
                                    Text="ðŸ“š Daf Yomi"
                                    FontSize="16"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <TextBlock
                                    x:Name="txtDafYomi"
                                    FontSize="22"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    TextWrapping="Wrap"
                                    Foreground="#CE9178"
                                    Text="" />
                                <TextBlock
                                    x:Name="txtDafYomiHebrew"
                                    FontSize="20"
                                    HorizontalAlignment="Center"
                                    FlowDirection="RightToLeft"
                                    TextWrapping="Wrap"
                                    Foreground="#CE9178"
                                    Text="" />
                            </StackPanel>
                        </Border>

                        <!-- Halachic Times Card -->
                        <Border 
                            Grid.Row="1" Grid.Column="0"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,10,10"
                            MinHeight="160">
                            <StackPanel Spacing="12" VerticalAlignment="Center">
                                <TextBlock
                                    Text="ðŸ• Halachic Times"
                                    FontSize="16"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Alot HaShachar:" Foreground="#B0B0B0" Margin="0,3" FontSize="14" />
                                    <TextBlock x:Name="txtAlotHaShachar" Grid.Row="0" Grid.Column="1" Foreground="#FFFFFF" Margin="10,3,0,3" FontSize="14" Text="" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Sunrise (× ×¥ ×”×—×ž×”):" Foreground="#B0B0B0" Margin="0,3" FontSize="14" />
                                    <TextBlock x:Name="txtSunrise" Grid.Row="1" Grid.Column="1" Foreground="#FFD700" FontWeight="SemiBold" Margin="10,3,0,3" FontSize="14" Text="" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Sunset (×©×§×™×¢×”):" Foreground="#B0B0B0" Margin="0,3" FontSize="14" />
                                    <TextBlock x:Name="txtSunset" Grid.Row="2" Grid.Column="1" Foreground="#FFD700" FontWeight="SemiBold" Margin="10,3,0,3" FontSize="14" Text="" />

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Tzait HaKochavim:" Foreground="#B0B0B0" Margin="0,3" FontSize="14" />
                                    <TextBlock x:Name="txtTzait" Grid.Row="3" Grid.Column="1" Foreground="#FFFFFF" Margin="10,3,0,3" FontSize="14" Text="" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Moon Phase Card -->
                        <Border 
                            Grid.Row="1" Grid.Column="1"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,10"
                            MinHeight="160">
                            <StackPanel Spacing="10" VerticalAlignment="Center">
                                <TextBlock
                                    Text="ðŸŒ™ Moon Phase"
                                    FontSize="16"
                                    HorizontalAlignment="Center"
                                    Foreground="#888888" />
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                                    <TextBlock x:Name="txtMoonPhase" FontSize="40" Text="" />
                                    <TextBlock x:Name="txtMoonPhaseName" FontSize="18" VerticalAlignment="Center" TextWrapping="Wrap" Foreground="#B0B0B0" Text="" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Prayer Times Card -->
                        <Border 
                            Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#2D2D30" 
                            CornerRadius="12" 
                            Padding="20"
                            Margin="0,0,0,10"
                            MinHeight="160">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                                    <TextBlock
                                        Text="âœ¡ï¸ Prayer Times"
                                        FontSize="16"
                                        Foreground="#888888"
                                        VerticalAlignment="Center" />
                                    <TextBlock
                                        x:Name="txtCurrentTime"
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Foreground="#FFFFFF"
                                        VerticalAlignment="Center"
                                        Text="" />
                                </StackPanel>
                                <TextBlock
                                    x:Name="txtCurrentPrayer"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    Foreground="#90EE90"
                                    Text="" />
                                <Grid Margin="0,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="25" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Shacharit:" Foreground="#B0B0B0" Margin="0,3" FontSize="14" />
                                    <TextBlock x:Name="txtShacharitTime" Grid.Row="0" Grid.Column="1" Foreground="#87CEEB" Margin="10,3,0,3" FontSize="14" Text="" />
                                    <TextBlock x:Name="txtShacharitIndicator" Grid.Row="0" Grid.Column="2" FontSize="16" HorizontalAlignment="Center" Margin="5,3,0,3" Text="" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Mincha:" Foreground="#B0B0B0" Margin="0,3" FontSize="14" />
                                    <TextBlock x:Name="txtMinchaTime" Grid.Row="1" Grid.Column="1" Foreground="#FFA07A" Margin="10,3,0,3" FontSize="14" Text="" />
                                    <TextBlock x:Name="txtMinchaIndicator" Grid.Row="1" Grid.Column="2" FontSize="16" HorizontalAlignment="Center" Margin="5,3,0,3" Text="" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Maariv:" Foreground="#B0B0B0" Margin="0,3" FontSize="14" />
                                    <TextBlock x:Name="txtMaarivTime" Grid.Row="2" Grid.Column="1" Foreground="#9370DB" Margin="10,3,0,3" FontSize="14" Text="" />
                                    <TextBlock x:Name="txtMaarivIndicator" Grid.Row="2" Grid.Column="2" FontSize="16" HorizontalAlignment="Center" Margin="5,3,0,3" Text="" />
                                </Grid>
                            </StackPanel>
                        </Border>

                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Page.Content>
</Page>
