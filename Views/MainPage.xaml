<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Jewochron.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Jewochron"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Content>
        <Grid x:Name="RootGrid" Background="#1E1E1E" Padding="10" SizeChanged="RootGrid_SizeChanged">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="LayoutStates">
                    <!-- Portrait Narrow Mode - Very narrow portrait, 1 column -->
                    <VisualState x:Name="PortraitNarrowState">
                        <VisualState.Setters>
                            <!-- Skyline: Full width in portrait -->
                            <Setter Target="SkylineViewbox.MaxWidth" Value="9999" />
                            <Setter Target="SkylineViewbox.MaxHeight" Value="120" />
                            <Setter Target="SkylineViewbox.HorizontalAlignment" Value="Stretch" />
                            <Setter Target="SkylineViewbox.Margin" Value="0,5,0,10" />

                            <!-- Camel: Position higher so it's fully visible in shorter canvas -->
                            <Setter Target="AnimatedCamel.(Canvas.Top)" Value="55" />

                            <!-- MainStack: Full width, no max width -->
                            <Setter Target="MainStack.MaxWidth" Value="9999" />
                            <Setter Target="MainStack.HorizontalAlignment" Value="Stretch" />
                            <Setter Target="MainStack.Spacing" Value="12" />

                            <!-- Time Display: Keep horizontal side-by-side even in narrow mode -->
                            <Setter Target="TimeGrid.ColumnDefinitions[1].Width" Value="*" />
                            <Setter Target="LocalTimeStack.(Grid.Column)" Value="0" />
                            <Setter Target="LocalTimeStack.(Grid.Row)" Value="0" />
                            <Setter Target="JerusalemTimeStack.(Grid.Column)" Value="1" />
                            <Setter Target="JerusalemTimeStack.(Grid.Row)" Value="0" />
                            <Setter Target="TimeGrid.RowDefinitions[1].Height" Value="0" />
                            <Setter Target="TimeDisplayBorder.Padding" Value="16,14" />

                            <!-- Date Card: Compact -->
                            <Setter Target="DateCard.Padding" Value="16,14" />
                            <Setter Target="txtEnglishDate.FontSize" Value="18" />
                            <Setter Target="txtHebrewDate.FontSize" Value="28" />
                            <Setter Target="txtHebrewDateInHebrew.FontSize" Value="24" />

                            <!-- Cards Grid: SINGLE column, FULL WIDTH in very narrow portrait -->
                            <Setter Target="CardsGrid.ColumnDefinitions[0].MinWidth" Value="0" />
                            <Setter Target="CardsGrid.ColumnDefinitions[1].Width" Value="0" />
                            <Setter Target="CardsGrid.ColumnDefinitions[1].MinWidth" Value="0" />
                            <Setter Target="CardsGrid.ColumnDefinitions[2].Width" Value="0" />
                            <Setter Target="CardsGrid.ColumnDefinitions[2].MinWidth" Value="0" />
                            <Setter Target="CardsGrid.Margin" Value="0" />
                            <Setter Target="CardsGrid.MaxWidth" Value="9999" />
                            <Setter Target="CardsGrid.HorizontalAlignment" Value="Stretch" />

                            <!-- All cards in column 0, stacked vertically -->
                            <Setter Target="ParshaCard.(Grid.Column)" Value="0" />
                            <Setter Target="ParshaCard.(Grid.Row)" Value="0" />
                            <Setter Target="ParshaCard.Margin" Value="0,0,0,10" />
                            <Setter Target="ParshaCard.Padding" Value="16,14" />
                            <Setter Target="ParshaCard.MinHeight" Value="130" />
                            <Setter Target="ParshaCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="DafYomiCard.(Grid.Column)" Value="0" />
                            <Setter Target="DafYomiCard.(Grid.Row)" Value="1" />
                            <Setter Target="DafYomiCard.Margin" Value="0,0,0,10" />
                            <Setter Target="DafYomiCard.Padding" Value="16,14" />
                            <Setter Target="DafYomiCard.MinHeight" Value="130" />
                            <Setter Target="DafYomiCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="HalachicCard.(Grid.Column)" Value="0" />
                            <Setter Target="HalachicCard.(Grid.Row)" Value="2" />
                            <Setter Target="HalachicCard.Margin" Value="0,0,0,10" />
                            <Setter Target="HalachicCard.Padding" Value="16,14" />
                            <Setter Target="HalachicCard.MinHeight" Value="130" />
                            <Setter Target="HalachicCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="MoonCard.(Grid.Column)" Value="0" />
                            <Setter Target="MoonCard.(Grid.Row)" Value="3" />
                            <Setter Target="MoonCard.Margin" Value="0,0,0,10" />
                            <Setter Target="MoonCard.Padding" Value="16,14" />
                            <Setter Target="MoonCard.MinHeight" Value="130" />
                            <Setter Target="MoonCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="HolidayCard.(Grid.Column)" Value="0" />
                            <Setter Target="HolidayCard.(Grid.Row)" Value="4" />
                            <Setter Target="HolidayCard.Margin" Value="0,0,0,10" />
                            <Setter Target="HolidayCard.Padding" Value="16,14" />
                            <Setter Target="HolidayCard.MinHeight" Value="130" />
                            <Setter Target="HolidayCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="PrayerCard.(Grid.Column)" Value="0" />
                            <Setter Target="PrayerCard.(Grid.Row)" Value="5" />
                            <Setter Target="PrayerCard.Margin" Value="0,0,0,10" />
                            <Setter Target="PrayerCard.Padding" Value="16,14" />
                            <Setter Target="PrayerCard.MinHeight" Value="130" />
                            <Setter Target="PrayerCard.HorizontalAlignment" Value="Stretch" />
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Portrait Wide Mode - Portrait with enough width for 2 columns -->
                    <VisualState x:Name="PortraitWideState">
                        <VisualState.Setters>
                            <!-- Skyline: Full width in portrait -->
                            <Setter Target="SkylineViewbox.MaxWidth" Value="9999" />
                            <Setter Target="SkylineViewbox.MaxHeight" Value="120" />
                            <Setter Target="SkylineViewbox.HorizontalAlignment" Value="Stretch" />
                            <Setter Target="SkylineViewbox.Margin" Value="0,5,0,10" />

                            <!-- Camel: Position higher so it's fully visible in shorter canvas -->
                            <Setter Target="AnimatedCamel.(Canvas.Top)" Value="55" />

                            <!-- MainStack: Full width -->
                            <Setter Target="MainStack.MaxWidth" Value="9999" />
                            <Setter Target="MainStack.HorizontalAlignment" Value="Stretch" />
                            <Setter Target="MainStack.Spacing" Value="12" />

                            <!-- Time Display: Keep horizontal side-by-side -->
                            <Setter Target="TimeGrid.ColumnDefinitions[1].Width" Value="*" />
                            <Setter Target="LocalTimeStack.(Grid.Column)" Value="0" />
                            <Setter Target="LocalTimeStack.(Grid.Row)" Value="0" />
                            <Setter Target="JerusalemTimeStack.(Grid.Column)" Value="1" />
                            <Setter Target="JerusalemTimeStack.(Grid.Row)" Value="0" />
                            <Setter Target="TimeGrid.RowDefinitions[1].Height" Value="0" />
                            <Setter Target="TimeDisplayBorder.Padding" Value="16,14" />

                            <!-- Date Card: Compact -->
                            <Setter Target="DateCard.Padding" Value="16,14" />
                            <Setter Target="txtEnglishDate.FontSize" Value="18" />
                            <Setter Target="txtHebrewDate.FontSize" Value="28" />
                            <Setter Target="txtHebrewDateInHebrew.FontSize" Value="24" />

                            <!-- Cards Grid: TWO columns in wider portrait -->
                            <Setter Target="CardsGrid.ColumnDefinitions[0].MinWidth" Value="0" />
                            <Setter Target="CardsGrid.ColumnDefinitions[1].Width" Value="*" />
                            <Setter Target="CardsGrid.ColumnDefinitions[1].MinWidth" Value="0" />
                            <Setter Target="CardsGrid.ColumnDefinitions[2].Width" Value="0" />
                            <Setter Target="CardsGrid.ColumnDefinitions[2].MinWidth" Value="0" />
                            <Setter Target="CardsGrid.Margin" Value="0" />
                            <Setter Target="CardsGrid.MaxWidth" Value="9999" />
                            <Setter Target="CardsGrid.HorizontalAlignment" Value="Stretch" />

                            <!-- Row 0: Parsha, Daf Yomi -->
                            <Setter Target="ParshaCard.(Grid.Column)" Value="0" />
                            <Setter Target="ParshaCard.(Grid.Row)" Value="0" />
                            <Setter Target="ParshaCard.Margin" Value="0,0,6,10" />
                            <Setter Target="ParshaCard.Padding" Value="16,14" />
                            <Setter Target="ParshaCard.MinHeight" Value="140" />
                            <Setter Target="ParshaCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="DafYomiCard.(Grid.Column)" Value="1" />
                            <Setter Target="DafYomiCard.(Grid.Row)" Value="0" />
                            <Setter Target="DafYomiCard.Margin" Value="0,0,0,10" />
                            <Setter Target="DafYomiCard.Padding" Value="16,14" />
                            <Setter Target="DafYomiCard.MinHeight" Value="140" />
                            <Setter Target="DafYomiCard.HorizontalAlignment" Value="Stretch" />

                            <!-- Row 1: Halachic, Moon -->
                            <Setter Target="HalachicCard.(Grid.Column)" Value="0" />
                            <Setter Target="HalachicCard.(Grid.Row)" Value="1" />
                            <Setter Target="HalachicCard.Margin" Value="0,0,6,10" />
                            <Setter Target="HalachicCard.Padding" Value="16,14" />
                            <Setter Target="HalachicCard.MinHeight" Value="140" />
                            <Setter Target="HalachicCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="MoonCard.(Grid.Column)" Value="1" />
                            <Setter Target="MoonCard.(Grid.Row)" Value="1" />
                            <Setter Target="MoonCard.Margin" Value="0,0,0,10" />
                            <Setter Target="MoonCard.Padding" Value="16,14" />
                            <Setter Target="MoonCard.MinHeight" Value="140" />
                            <Setter Target="MoonCard.HorizontalAlignment" Value="Stretch" />

                            <!-- Row 2: Holiday, Prayer -->
                            <Setter Target="HolidayCard.(Grid.Column)" Value="0" />
                            <Setter Target="HolidayCard.(Grid.Row)" Value="2" />
                            <Setter Target="HolidayCard.Margin" Value="0,0,6,10" />
                            <Setter Target="HolidayCard.Padding" Value="16,14" />
                            <Setter Target="HolidayCard.MinHeight" Value="140" />
                            <Setter Target="HolidayCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="PrayerCard.(Grid.Column)" Value="1" />
                            <Setter Target="PrayerCard.(Grid.Row)" Value="2" />
                            <Setter Target="PrayerCard.Margin" Value="0,0,0,10" />
                            <Setter Target="PrayerCard.Padding" Value="16,14" />
                            <Setter Target="PrayerCard.MinHeight" Value="140" />
                            <Setter Target="PrayerCard.HorizontalAlignment" Value="Stretch" />
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Landscape Narrow (16:9 at smaller size or other narrow landscape) -->
                    <VisualState x:Name="LandscapeNarrowState">
                        <VisualState.Setters>
                            <!-- Skyline: Full size -->
                            <Setter Target="SkylineViewbox.MaxWidth" Value="1200" />
                            <Setter Target="SkylineViewbox.MaxHeight" Value="150" />
                            <Setter Target="SkylineViewbox.Margin" Value="0,10,0,5" />

                            <!-- MainStack: Reasonable max width -->
                            <Setter Target="MainStack.MaxWidth" Value="1400" />
                            <Setter Target="MainStack.Spacing" Value="15" />

                            <!-- Time Display: Horizontal -->
                            <Setter Target="TimeGrid.ColumnDefinitions[1].Width" Value="*" />
                            <Setter Target="LocalTimeStack.(Grid.Column)" Value="0" />
                            <Setter Target="LocalTimeStack.(Grid.Row)" Value="0" />
                            <Setter Target="JerusalemTimeStack.(Grid.Column)" Value="1" />
                            <Setter Target="JerusalemTimeStack.(Grid.Row)" Value="0" />
                            <Setter Target="TimeGrid.RowDefinitions[1].Height" Value="0" />
                            <Setter Target="TimeDisplayBorder.Padding" Value="20,18" />
                            <Setter Target="txtLocalTime.FontSize" Value="48" />
                            <Setter Target="txtJerusalemTime.FontSize" Value="48" />

                            <!-- Date Card -->
                            <Setter Target="DateCard.Padding" Value="22,18" />
                            <Setter Target="txtEnglishDate.FontSize" Value="24" />
                            <Setter Target="txtHebrewDate.FontSize" Value="36" />
                            <Setter Target="txtHebrewDateInHebrew.FontSize" Value="32" />

                            <!-- Cards Grid: THREE columns in landscape -->
                            <Setter Target="CardsGrid.ColumnDefinitions[1].Width" Value="*" />
                            <Setter Target="CardsGrid.ColumnDefinitions[2].Width" Value="*" />
                            <Setter Target="CardsGrid.HorizontalAlignment" Value="Stretch" />
                            <Setter Target="CardsGrid.MaxWidth" Value="9999" />

                            <!-- Position cards in 3-column layout -->
                            <!-- Row 0: Parsha, Daf Yomi, Halachic -->
                            <Setter Target="ParshaCard.(Grid.Column)" Value="0" />
                            <Setter Target="ParshaCard.(Grid.Row)" Value="0" />
                            <Setter Target="ParshaCard.Margin" Value="0,0,12,10" />
                            <Setter Target="ParshaCard.Padding" Value="20,16" />
                            <Setter Target="ParshaCard.MinHeight" Value="160" />
                            <Setter Target="ParshaCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="DafYomiCard.(Grid.Column)" Value="1" />
                            <Setter Target="DafYomiCard.(Grid.Row)" Value="0" />
                            <Setter Target="DafYomiCard.Margin" Value="0,0,12,10" />
                            <Setter Target="DafYomiCard.Padding" Value="20,16" />
                            <Setter Target="DafYomiCard.MinHeight" Value="160" />
                            <Setter Target="DafYomiCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="HalachicCard.(Grid.Column)" Value="2" />
                            <Setter Target="HalachicCard.(Grid.Row)" Value="0" />
                            <Setter Target="HalachicCard.Margin" Value="0,0,0,10" />
                            <Setter Target="HalachicCard.Padding" Value="20,16" />
                            <Setter Target="HalachicCard.MinHeight" Value="160" />
                            <Setter Target="HalachicCard.HorizontalAlignment" Value="Stretch" />

                            <!-- Row 1: Moon, Holiday, Prayer -->
                            <Setter Target="MoonCard.(Grid.Column)" Value="0" />
                            <Setter Target="MoonCard.(Grid.Row)" Value="1" />
                            <Setter Target="MoonCard.Margin" Value="0,0,12,10" />
                            <Setter Target="MoonCard.Padding" Value="20,16" />
                            <Setter Target="MoonCard.MinHeight" Value="160" />
                            <Setter Target="MoonCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="HolidayCard.(Grid.Column)" Value="1" />
                            <Setter Target="HolidayCard.(Grid.Row)" Value="1" />
                            <Setter Target="HolidayCard.Margin" Value="0,0,12,10" />
                            <Setter Target="HolidayCard.Padding" Value="20,16" />
                            <Setter Target="HolidayCard.MinHeight" Value="160" />
                            <Setter Target="HolidayCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="PrayerCard.(Grid.Column)" Value="2" />
                            <Setter Target="PrayerCard.(Grid.Row)" Value="1" />
                            <Setter Target="PrayerCard.Margin" Value="0,0,0,10" />
                            <Setter Target="PrayerCard.Padding" Value="20,16" />
                            <Setter Target="PrayerCard.MinHeight" Value="160" />
                            <Setter Target="PrayerCard.HorizontalAlignment" Value="Stretch" />
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Landscape Wide (16:9 at larger size, optimal for large displays) -->
                    <VisualState x:Name="LandscapeWideState">
                        <VisualState.Setters>
                            <!-- Skyline: Full size -->
                            <Setter Target="SkylineViewbox.MaxWidth" Value="1200" />
                            <Setter Target="SkylineViewbox.MaxHeight" Value="150" />
                            <Setter Target="SkylineViewbox.Margin" Value="0,10,0,5" />

                            <!-- MainStack: Larger max width for big displays -->
                            <Setter Target="MainStack.MaxWidth" Value="1800" />
                            <Setter Target="MainStack.Spacing" Value="20" />

                            <!-- Time Display: Horizontal, larger fonts -->
                            <Setter Target="TimeGrid.ColumnDefinitions[1].Width" Value="*" />
                            <Setter Target="LocalTimeStack.(Grid.Column)" Value="0" />
                            <Setter Target="LocalTimeStack.(Grid.Row)" Value="0" />
                            <Setter Target="JerusalemTimeStack.(Grid.Column)" Value="1" />
                            <Setter Target="JerusalemTimeStack.(Grid.Row)" Value="0" />
                            <Setter Target="TimeGrid.RowDefinitions[1].Height" Value="0" />
                            <Setter Target="TimeDisplayBorder.Padding" Value="24,20" />
                            <Setter Target="txtLocalTime.FontSize" Value="56" />
                            <Setter Target="txtJerusalemTime.FontSize" Value="56" />

                            <!-- Date Card: Larger -->
                            <Setter Target="DateCard.Padding" Value="28,22" />
                            <Setter Target="txtEnglishDate.FontSize" Value="28" />
                            <Setter Target="txtHebrewDate.FontSize" Value="42" />
                            <Setter Target="txtHebrewDateInHebrew.FontSize" Value="38" />

                            <!-- Cards Grid: THREE columns for 1920Ã—1080 displays -->
                            <Setter Target="CardsGrid.ColumnDefinitions[1].Width" Value="*" />
                            <Setter Target="CardsGrid.ColumnDefinitions[2].Width" Value="*" />
                            <Setter Target="CardsGrid.HorizontalAlignment" Value="Stretch" />
                            <Setter Target="CardsGrid.MaxWidth" Value="9999" />

                            <!-- Row 0: Parsha, Daf Yomi, Halachic -->
                            <Setter Target="ParshaCard.(Grid.Column)" Value="0" />
                            <Setter Target="ParshaCard.(Grid.Row)" Value="0" />
                            <Setter Target="ParshaCard.Margin" Value="0,0,12,10" />
                            <Setter Target="ParshaCard.Padding" Value="20,18" />
                            <Setter Target="ParshaCard.MinHeight" Value="160" />
                            <Setter Target="ParshaCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="DafYomiCard.(Grid.Column)" Value="1" />
                            <Setter Target="DafYomiCard.(Grid.Row)" Value="0" />
                            <Setter Target="DafYomiCard.Margin" Value="0,0,12,10" />
                            <Setter Target="DafYomiCard.Padding" Value="20,18" />
                            <Setter Target="DafYomiCard.MinHeight" Value="160" />
                            <Setter Target="DafYomiCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="HalachicCard.(Grid.Column)" Value="2" />
                            <Setter Target="HalachicCard.(Grid.Row)" Value="0" />
                            <Setter Target="HalachicCard.Margin" Value="0,0,0,10" />
                            <Setter Target="HalachicCard.Padding" Value="20,18" />
                            <Setter Target="HalachicCard.MinHeight" Value="160" />
                            <Setter Target="HalachicCard.HorizontalAlignment" Value="Stretch" />

                            <!-- Row 1: Moon, Holiday, Prayer -->
                            <Setter Target="MoonCard.(Grid.Column)" Value="0" />
                            <Setter Target="MoonCard.(Grid.Row)" Value="1" />
                            <Setter Target="MoonCard.Margin" Value="0,0,12,10" />
                            <Setter Target="MoonCard.Padding" Value="20,18" />
                            <Setter Target="MoonCard.MinHeight" Value="160" />
                            <Setter Target="MoonCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="HolidayCard.(Grid.Column)" Value="1" />
                            <Setter Target="HolidayCard.(Grid.Row)" Value="1" />
                            <Setter Target="HolidayCard.Margin" Value="0,0,12,10" />
                            <Setter Target="HolidayCard.Padding" Value="20,18" />
                            <Setter Target="HolidayCard.MinHeight" Value="160" />
                            <Setter Target="HolidayCard.HorizontalAlignment" Value="Stretch" />

                            <Setter Target="PrayerCard.(Grid.Column)" Value="2" />
                            <Setter Target="PrayerCard.(Grid.Row)" Value="1" />
                            <Setter Target="PrayerCard.Margin" Value="0,0,0,10" />
                            <Setter Target="PrayerCard.Padding" Value="20,18" />
                            <Setter Target="PrayerCard.MinHeight" Value="160" />
                            <Setter Target="PrayerCard.HorizontalAlignment" Value="Stretch" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="MainStack" HorizontalAlignment="Center" MaxWidth="1200" Spacing="15">

                    <!-- Jerusalem Skyline Graphic - Responsive with Viewbox -->
                    <Viewbox x:Name="SkylineViewbox" Stretch="Uniform" HorizontalAlignment="Center" MaxWidth="1200" MaxHeight="150" Margin="0,10,0,5">
                    <Canvas x:Name="SkylineCanvas" Width="1200" Height="150" HorizontalAlignment="Center">
                        <!-- Sky gradient layers (will change based on time of day) -->
                        <Rectangle x:Name="SkyLayer1" Width="1200" Height="150" Fill="#2C3E50" />
                        <Rectangle x:Name="SkyLayer2" Width="1200" Height="80" Fill="#34495E" Opacity="0.6" />
                        <Rectangle x:Name="SkyLayer3" Width="1200" Height="40" Fill="#5D6D7E" Opacity="0.3" />

                        <!-- Sun (hidden at night) -->
                        <Canvas x:Name="SunCanvas" Visibility="Collapsed">
                            <Ellipse x:Name="SunGlow" Canvas.Left="-5" Canvas.Top="-5" Width="50" Height="50" Fill="#FFE4B5" Opacity="0.4" />
                            <Ellipse x:Name="Sun" Width="40" Height="40" Fill="#FFD700" />
                            <Ellipse x:Name="SunHighlight" Canvas.Left="5" Canvas.Top="3" Width="30" Height="30" Fill="#FFEB3B" Opacity="0.6" />
                        </Canvas>

                        <!-- Moon (hidden during day) - Drawn moon with accurate phase -->
                        <Canvas x:Name="MoonCanvas" Canvas.Left="200" Canvas.Top="5" Visibility="Collapsed">
                            <!-- Moon glow background -->
                            <Ellipse x:Name="SkylineMoonGlow" Width="54" Height="54" Canvas.Left="-7" Canvas.Top="-7" Fill="#FFFACD" Opacity="0.15" />
                            <!-- Moon base (lit portion) - creamy white circle -->
                            <Ellipse x:Name="SkylineMoonLit" Width="40" Height="40" Fill="#FFFDE7" />
                            <!-- Moon surface texture (subtle craters) - visible on lit portion -->
                            <Ellipse Canvas.Left="8" Canvas.Top="10" Width="6" Height="6" Fill="#E8E4D0" Opacity="0.4" />
                            <Ellipse Canvas.Left="20" Canvas.Top="18" Width="5" Height="5" Fill="#E8E4D0" Opacity="0.35" />
                            <Ellipse Canvas.Left="14" Canvas.Top="26" Width="4" Height="4" Fill="#E8E4D0" Opacity="0.3" />
                            <Ellipse Canvas.Left="26" Canvas.Top="12" Width="3" Height="3" Fill="#E8E4D0" Opacity="0.3" />
                            <Ellipse Canvas.Left="30" Canvas.Top="24" Width="4" Height="4" Fill="#E8E4D0" Opacity="0.35" />
                            <!-- Shadow ellipse (dark side) - positioned dynamically to create phase effect -->
                            <Ellipse x:Name="SkylineMoonShadow" Width="40" Height="40" Canvas.Left="0" Canvas.Top="0" Fill="#1A202C" />
                        </Canvas>
                        
                        <!-- Stars (visible at night) - 6-pointed Stars of David -->
                        <Canvas x:Name="StarsCanvas" Visibility="Visible">
                            <Path Canvas.Left="100" Canvas.Top="15" Data="M 8,3 L 14,11 L 2,11 Z M 8,13 L 14,5 L 2,5 Z" Fill="#FFFACD" Opacity="0.8" Width="6" Height="6" Stretch="Uniform" />
                            <Path Canvas.Left="180" Canvas.Top="25" Data="M 8,3 L 14,11 L 2,11 Z M 8,13 L 14,5 L 2,5 Z" Fill="#FFFACD" Width="8" Height="8" Stretch="Uniform" />
                            <Path Canvas.Left="250" Canvas.Top="18" Data="M 8,3 L 14,11 L 2,11 Z M 8,13 L 14,5 L 2,5 Z" Fill="#FFFACD" Opacity="0.7" Width="6" Height="6" Stretch="Uniform" />
                            <Path Canvas.Left="320" Canvas.Top="22" Data="M 8,3 L 14,11 L 2,11 Z M 8,13 L 14,5 L 2,5 Z" Fill="#FFFACD" Opacity="0.9" Width="6" Height="6" Stretch="Uniform" />
                            <Path Canvas.Left="420" Canvas.Top="12" Data="M 8,3 L 14,11 L 2,11 Z M 8,13 L 14,5 L 2,5 Z" Fill="#FFFACD" Width="8" Height="8" Stretch="Uniform" />
                            <Path Canvas.Left="680" Canvas.Top="20" Data="M 8,3 L 14,11 L 2,11 Z M 8,13 L 14,5 L 2,5 Z" Fill="#FFFACD" Opacity="0.8" Width="6" Height="6" Stretch="Uniform" />
                            <Path Canvas.Left="750" Canvas.Top="28" Data="M 8,3 L 14,11 L 2,11 Z M 8,13 L 14,5 L 2,5 Z" Fill="#FFFACD" Opacity="0.7" Width="6" Height="6" Stretch="Uniform" />
                            <Path Canvas.Left="840" Canvas.Top="16" Data="M 8,3 L 14,11 L 2,11 Z M 8,13 L 14,5 L 2,5 Z" Fill="#FFFACD" Width="8" Height="8" Stretch="Uniform" />
                            <Path Canvas.Left="1070" Canvas.Top="24" Data="M 8,3 L 14,11 L 2,11 Z M 8,13 L 14,5 L 2,5 Z" Fill="#FFFACD" Opacity="0.9" Width="6" Height="6" Stretch="Uniform" />
                            <Path Canvas.Left="1120" Canvas.Top="30" Data="M 8,3 L 14,11 L 2,11 Z M 8,13 L 14,5 L 2,5 Z" Fill="#FFFACD" Opacity="0.8" Width="6" Height="6" Stretch="Uniform" />
                        </Canvas>
                        
                        <!-- Distant Mount of Olives (layered hills with depth) -->
                        <Ellipse Canvas.Left="-80" Canvas.Top="100" Width="350" Height="60" Fill="#1C2833" Opacity="0.6" />
